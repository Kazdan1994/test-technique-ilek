<div class="min-w-screen min-h-screen bg-gray-800 px-5 py-5">
  <div class="w-full mx-auto rounded-xl bg-gray-100 shadow-lg p-10 text-gray-800 relative overflow-hidden resize-x min-w-80 max-w-3xl">
    <!-- Search Bar -->
    <form class="relative mt-1">
      <label for="search"></label>
      <input type="search" id="search" name="q" class="w-full pl-3 pr-10 py-2 border-2 border-gray-200 rounded-xl hover:border-gray-300 focus:outline-none focus:border-blue-500 transition-colors" placeholder="Search..." value="<%= params[:q] %>">
      <button class="block w-7 h-7 text-center text-xl leading-0 absolute top-2 right-2 text-gray-400 focus:outline-none hover:text-gray-900 transition-colors">
        <i class="mdi mdi-magnify"></i>
      </button>
    </form>
    <!-- Color Bar -->
    <div class="absolute top-0 left-0 w-full h-2 flex">
      <div class="h-2 bg-blue-500 flex-1"></div>
      <div class="h-2 bg-red-500 flex-1"></div>
      <div class="h-2 bg-yellow-500 flex-1"></div>
      <div class="h-2 bg-blue-500 flex-1"></div>
      <div class="h-2 bg-green-500 flex-1"></div>
      <div class="h-2 bg-red-500 flex-1"></div>
    </div>
    <!-- Wine Cards -->
    <div class="mt-6 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-x-4 gap-y-6 xl:gap-x-4">
      <% @wines.each do |wine| %>
        <div class="group relative">
          <div class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-md bg-gray-200 lg:aspect-none group-hover:opacity-75 lg:h-80">
            <img
              src="https://res.cloudinary.com/dttd773dq/image/upload/v1697274692/ilek-assets/images/wine-bottle_uatwvb.png"
              alt=""
              class="h-full w-full object-cover object-center lg:h-full lg:w-full"
            >
          </div>
          <div class="mt-4 flex justify-between">
            <div>
              <h3 class="text-sm text-gray-700">
                <a href="#">
                  <span aria-hidden="true" class="absolute inset-0"></span>
                  <%= wine.name %>
                </a>
              </h3>
              <p class="mt-1 text-sm text-gray-500">
                <%= number_to_currency(wine.price, :unit => 'â‚¬', :separator => ',', :delimiter => ' ', format: '%n %u') %>
              </p>
            </div>
            <p class="text-sm font-medium text-gray-900"><%= wine.properties %></p>
          </div>
        </div>
      <% end %>
    </div>
    <div class="flex items-center justify-center my-6">
      <% if @pagy.pages > 1 %>
        <%= pagy_nav(@pagy, link_extra: 'class="border rounded-md px-3 py-1 text-blue-500 mx-1"', link_inactive_extra: 'class="border rounded-md px-3 py-1 text-gray-500 mx-1"').html_safe %>
      <% end %>
    </div>
  </div>
</div>
