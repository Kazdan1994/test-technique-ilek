<div class="container mx-auto p-6">
  <div class="relative p-6 flex w-full flex-row text-gray-700">
    <div class="relative m-0 flex justify-center items-center shrink-0 overflow-hidden rounded-xl rounded-r-none bg-white bg-clip-border text-gray-700">
      <img
        src="https://res.cloudinary.com/dttd773dq/image/upload/v1697274692/ilek-assets/images/wine-bottle_uatwvb.png"
        alt="image"
        class="h-48 w-48 object-cover"
        />
    </div>
    <div class="flex items-center">
      <div>
        <h4 class="text-3xl font-bold mb-4 uppercase leading-relaxed tracking-normal text-[#a20848] antialiased">
          <%= @wine.name %>
        </h4>
        <p class="mb-8 block font-sans text-gray-500 font-normal leading-relaxed antialiased">
          <%= @wine.properties %>
        </p>
      </div>
    </div>
  </div>
  <div class="flex justify-center max-w-3xl mb-6">
    <%= form_with(model: [@wine, @review], local: true) do |form| %>
      <div class="mb-4">
        <%= form.label :message, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.text_area :message, class: "shadow appearance-none border rounded w-full py-6 px-4 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", value: @review.message || '' %>
      </div>

      <div class="mb-6">
        <%= form.label :rating, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.number_field :rating, in: 1..5, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", value: @review.rating || 5 %>
      </div>

      <div class="flex items-center justify-between">
        <%= form.submit "Submit", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>
  </div>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-x-4 gap-y-6">
    <% @wine.reviews.each do |review| %>
      <% if review.id != @review.id %>
        <div class="bg-white max-w-sm rounded-2xl flex justify-between flex-col px-10 py-2 shadow-lg hover:shadow-2xl transition duration-500">
          <div class="mt-4 text-md text-gray-600">
            <p><%= review.message %></p>
          </div>
          <div class="mt-auto flex justify-between space-x-4 py-6">
            <div class="text-sm font-semibold">
              <%= review.expert.name %>
              <p class="font-normal text-gray-500"> <%= time_ago_in_words(review.updated_at) %></p>
            </div>
            <div class="flex">
              <% review.rating.times do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>