<div class="container mx-auto p-6">
  <h1 class="mb-6">Searches</h1>
  <% @searches.each do |search| %>
      <div class="bg-gray-100 p-4 mb-4">
        <p class="text-lg font-medium"><%= DateTime.parse(search.updated_at.to_s).strftime('%Y-%m-%d at %H:%M') %></p>
        <p class="text-base">You searched <%= search.query %></p>
        <%= link_to "use search #{search.query}", root_path(q: search.query) %>
      </div>
  <% end %>
</div>